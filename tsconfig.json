{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",                       /* Base directory to resolve non-absolute module names. */
    "paths": {
      "@/screens/*": ["./src/app/screens/*"],
      "@/screens": ["./src/app/screens"],
      "@/constants/*": ["./src/constants/*"],
      "@/constants": ["./src/constants"],
      "@/app/*": ["./src/app/*"],
      "@/app": ["./src/app"],
      "@/navigation/*": ["./src/app/navigation/*"],
      "@/navigation": ["./src/app/navigation"],
    },
  }
}